#include <stdlib.h>
#include <stdio.h>
#include <string.h>

int main()
{
    char nome[30] = "Lucca Nobre";
    int i;
    int j;
    
    for(i = 1; i <= strlen(nome); i++){
        for(j = strlen(nome)-i; j > 0; j--){
            printf(" ");
        }
        for(j = i; j > 0; j--){
            printf("%c ", nome[i-1]);
        }
        printf("\n");
        
    }

    return 0;
}
